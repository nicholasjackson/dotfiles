// This is the user configuration. It is empty by default.

// All possible keys are described in the default configuration file.
// To open it, run the "Open default configuration" action.
{
    "environment": {
        "textEditor": "Visual Studio Code"
    },

    "behavior": {
        "quickSelect": {
            "activateOnAnyCharacter": false
        }
    },

    "keyBindings": {
        "core.change.current.pane":["Control+L", "Control+H", "Tab"],
       "core.move.up": ["K"],
	   "core.select.move.up": ["Shift+K"],
       "core.move.down": ["J"],
	   "core.select.move.down": ["Shift+J"],
       "core.clone.to.right": ["L"],
       "core.clone.to.left": ["H"],
       "core.copy": ["Y"],
       "core.move": ["X"],
       "core.delete": ["D"],
       "core.select.all":["Shift+A"],
       "core.toggle.terminal": ["Control+O"],
       "core.actions": ["Control+P"]
    },

    "fonts": {
        // File list font
        "files": ["Hack Regular", 14],
    },
    
    "etty": {
        "fonts": {
            "normal": ["Hack Regular", 14]
        }
    }
}
